<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              tools:context="tk.mygod.app.SaveFileActivity" android:orientation="vertical"
              android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView android:id="@+id/directory_view" android:layout_weight="1"
              android:layout_width="match_parent" android:layout_height="0dp"/>
    <EditText android:id="@+id/file_name" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="@string/file_save_file_name_hint" android:gravity="left" android:inputType="textNoSuggestions"/>
</LinearLayout>
